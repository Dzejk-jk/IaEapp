@model LoginViewModel
@{
	ViewData["Title"] = "Login";
}
<h1>Login</h1>
<form asp-action="Login" method="post">
	<input type="hidden" asp-for="ReturnUrl" />
	<div>
		<label asp-for="Email">E-mail</label>
		<input asp-for="Email" class="form-control" />
		<span asp-validation-for="Email" class="invalid-feedback d-block"></span>
	</div>
	<div>
		<label asp-for="Password">Heslo</label>
		<input asp-for="Password" class="form-control" type="password" />
		<span asp-validation-for="Password" class="invalid-feedback d-block"></span>
	</div>
	<div>
		Zapamatovat si? <input type="checkbox" asp-for="Remember" />
	</div>
	<button class="btn btn-primary" type="submit">Přihlásit</button>
</form> 