@using IaEapp.DTO
@model TransactionDTO

@{
    ViewData["Title"] = "Smazat transakci";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm border-danger">
            <div class="card-header bg-danger text-white fw-semibold">Potvrzení smazání</div>
            <div class="card-body">
                <p class="text-danger fw-semibold">Opravdu chcete smazat tuto transakci?</p>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label class="form-label">Popis</label>
                        <input class="form-control" value="@Model.Description" readonly />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Kategorie</label>
                        <input class="form-control" value="@Model.TransactionCategoryName" readonly />
                    </div>
                    <div class="mb-4">
                        <label class="form-label">Částka</label>
                        <input class="form-control @(Model.Income ? "text-success" : "text-danger")" value="@Model.Amount Kč"readonly />
                    </div>
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">Zpět</a>
                        <button type="submit" class="btn btn-danger">Smazat</button>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>
