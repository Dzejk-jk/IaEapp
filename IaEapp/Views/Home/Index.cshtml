@using IaEapp.Models
@model IEnumerable<Transaction>;
@{
    ViewData["Title"] = "Home Page";
}

<div class="container my-5">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col text-center">
            <h1 class="display-5 fw-bold">Přehled financí</h1>
            <p class="text-muted">
                Sleduj své příjmy a výdaje přehledně na jednom místě
            </p>
        </div>
    </div>

    <!-- Charts -->
    <div class="row g-4">

        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-header text-center fw-semibold">
                    Celkový přehled
                </div>
                <div class="card-body d-flex justify-content-center align-items-center">
                    <canvas id="chartAllTime" style="max-width: 100%; max-height: 300px"></canvas>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-header text-center fw-semibold">
                    Minulý měsíc
                </div>
                <div class="card-body d-flex justify-content-center align-items-center">
                    <canvas id="chartLastMonth" style="max-width: 100%; max-height: 300px"></canvas>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-header text-center fw-semibold">
                    Tento měsíc
                </div>
                <div class="card-body d-flex justify-content-center align-items-center">
                    <canvas id="chartThisMonth" style="max-width: 100%; max-height: 300px"></canvas>
                </div>
            </div>
        </div>

    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    // Načtení všech grafů po načtení stránky
    document.addEventListener('DOMContentLoaded', function() {
        // 1. Graf pro celkový přehled
        const ctxAllTime = document.getElementById('chartAllTime');
        if (ctxAllTime) {
            fetch('/Home/GetChart')
                .then(response => response.json())
                .then(data => {
                    new Chart(ctxAllTime, {
                        type: 'pie',
                        data: {
                            labels: data.map(d => d.categoryName),
                            datasets: [{
                                data: data.map(d => d.total),
                                backgroundColor: [
                                    '#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0',
                                    '#9966FF', '#FF9F40', '#8AC926', '#1982C4'
                                ]
                            }]
                        },
                        options: {
                            responsive: true,
                            plugins: {
                                legend: {
                                    position: 'right'
                                },
                                title: {
                                    display: true,
                                    text: 'Celkový přehled'
                                }
                            }
                        }
                    });
                });
        }

        // 2. Graf za minulý měsíc
        const ctxLastMonth = document.getElementById('chartLastMonth');
        if (ctxLastMonth) {
            fetch('/Home/GetChartLastMonth')
                .then(response => response.json())
                .then(data => {
                    new Chart(ctxLastMonth, {
                        type: 'pie',
                        data: {
                            labels: data.map(d => d.categoryName),
                            datasets: [{
                                data: data.map(d => d.total),
                                backgroundColor: [
                                    '#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0',
                                    '#9966FF', '#FF9F40', '#8AC926', '#1982C4'
                                ]
                            }]
                        },
                        options: {
                            responsive: true,
                            plugins: {
                                legend: {
                                    position: 'right'
                                },
                                title: {
                                    display: true,
                                    text: 'Minulý měsíc'
                                }
                            }
                        }
                    });
                });
        }

        // 3. Graf za tento měsíc
        const ctxThisMonth = document.getElementById('chartThisMonth');
        if (ctxThisMonth) {
            fetch('/Home/GetChartThisMonth')
                .then(response => response.json())
                .then(data => {
                    new Chart(ctxThisMonth, {
                        type: 'pie',
                        data: {
                            labels: data.map(d => d.categoryName),
                            datasets: [{
                                data: data.map(d => d.total),
                                backgroundColor: [
                                    '#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0',
                                    '#9966FF', '#FF9F40', '#8AC926', '#1982C4'
                                ]
                            }]
                        },
                        options: {
                            responsive: true,
                            plugins: {
                                legend: {
                                    position: 'right'
                                },
                                title: {
                                    display: true,
                                    text: 'Tento měsíc'
                                }
                            }
                        }
                    });
                });
        }
    });
</script>