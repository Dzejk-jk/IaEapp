@{
    ViewData["Title"] = "Import z XML";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header fw-semibold">
                Import transakcí z XML
            </div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data" asp-action="Upload">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label class="form-label">Vyber XML soubor</label>
                        <input type="file" name="file" class="form-control" accept=".xml" required />
                    </div>
                    <div class="d-flex justify-content-between">
                        <a asp-controller="Transactions" asp-action="Index" class="btn btn-outline-secondary">Zpět</a>
                        <button type="submit" class="btn btn-primary">Nahrát</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
