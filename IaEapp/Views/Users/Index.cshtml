@model IEnumerable<AppUser>
@{
	ViewData["Title"] = "Uživatelé";
}
<h1>Všichni uživatelé</h1>
<a asp-action="Create" class="btn btn-secondary">Vytvořit uživatele</a>
<table class="table table-sm table-bordered">
	<tr>
		<th>Name</th>
		<th>Email</th>
		<th>ID</th>
		<th>Upravit</th>
		<th>Smazat</th>
	</tr>
	@foreach (AppUser user in Model) {
	<tr>
		<td>@user.UserName</td>
		<td>@user.Email</td>
		<td>@user.Id</td>
		<td>
			<a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id"> Upravit</a>
		</td>
	@if (User.Identity.IsAuthenticated && User.IsInRole("SuperAdmin")) {
		<td>
			<form asp-action="Delete" asp-route-id="@user.Id" method="post">
					@Html.AntiForgeryToken()
				<button type="submit" class="btn btn-sm btn-danger">
					Odstranit
				</button>
			</form>
				</td>
			} else
			{ <td>
				<button type="submit" class="btn btn-sm btn-danger" disabled>
					Odstranit
				</button>
			</td>
			}
		</tr>
	}
</table> 