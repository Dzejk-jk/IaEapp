@using IaEapp.Models
@model IEnumerable<Transaction>;
@{
    ViewData["Title"] = "Přehled";
}

<div class="container my-5">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col text-center">
            <h1 class="display-5 fw-bold">Přehled financí</h1>
            <p class="text-muted">
                Sleduj své příjmy a výdaje přehledně na jednom místě
            </p>
        </div>
    </div>

    <!-- Charts -->

    <div class="card-body d-flex justify-content-center align-items-center">
        <canvas id="chartIncomeByMonth" style="width: 600px; height: 200px"></canvas>
    </div>

    <div class="row g-4">

        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-header text-center fw-semibold">
                    Celkový přehled
                </div>
                <div class="card-body d-flex justify-content-center align-items-center">
                    <canvas id="chartAllTime" style="max-width: 100%; max-height: 300px"></canvas>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-header text-center fw-semibold">
                    Minulý měsíc
                </div>
                <div class="card-body d-flex justify-content-center align-items-center">
                    <canvas id="chartLastMonth" style="max-width: 100%; max-height: 300px"></canvas>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-header text-center fw-semibold">
                    Tento měsíc
                </div>
                <div class="card-body d-flex justify-content-center align-items-center">
                    <canvas id="chartThisMonth" style="max-width: 100%; max-height: 300px"></canvas>
                </div>
            </div>
        </div>

    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    // Načtení všech grafů po načtení stránky
    document.addEventListener('DOMContentLoaded', function() {
        // 1. Graf pro výdaje a příjmy za měsíce
        const ctxIncomeByMonth = document.getElementById('chartIncomeByMonth');
        if (ctxIncomeByMonth) {
            fetch('/Home/GetChartDataIncomeByMonth')
            .then(response => response.json())
            .then(data => {
                const labels = data.map(d => `${d.month}/${d.year}`);
                const incomeData = data.map(d => d.income);
                const expenseData = data.map(d => Math.abs(d.expense));
                new Chart(ctxIncomeByMonth, {
                    type: 'bar',
                    data: {
                        labels: labels,
                        datasets: [
                            {
                                label: 'Příjmy',
                                data: incomeData,
                                backgroundColor: '#36A2EB'
                            },
                            {
                                label: 'Výdaje',
                                data: expenseData,
                                backgroundColor: '#FF6384'
                            }
                        ]
                    },
                    options: {
                        responsive: true,
                        plugins: {
                            legend: {
                                position: 'top'
                            },
                            title: {
                                display: true,
                                text: 'Přehled příjmů a výdajů po měsících'
                            }
                        },
                    }
                });
            });
        }

        // 2. Graf pro celkový přehled
        const ctxAllTime = document.getElementById('chartAllTime');
        if (ctxAllTime) {
            fetch('/Home/GetChart')
                .then(response => response.json())
                .then(data => {
                    new Chart(ctxAllTime, {
                        type: 'pie',
                        data: {
                            labels: data.map(d => d.categoryName),
                            datasets: [{
                                data: data.map(d => d.total),
                                backgroundColor: [
                                    '#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0',
                                    '#9966FF', '#FF9F40', '#8AC926', '#1982C4'
                                ]
                            }]
                        },
                        options: {
                            responsive: true,
                            plugins: {
                                legend: {
                                    position: 'right'
                                },
                                title: {
                                    display: true,
                                    text: 'Celkový přehled'
                                }
                            }
                        }
                    });
                });
        }

        // 3. Graf za minulý měsíc
        const ctxLastMonth = document.getElementById('chartLastMonth');
        if (ctxLastMonth) {
            fetch('/Home/GetChartLastMonth')
                .then(response => response.json())
                .then(data => {
                    new Chart(ctxLastMonth, {
                        type: 'pie',
                        data: {
                            labels: data.map(d => d.categoryName),
                            datasets: [{
                                data: data.map(d => d.total),
                                backgroundColor: [
                                    '#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0',
                                    '#9966FF', '#FF9F40', '#8AC926', '#1982C4'
                                ]
                            }]
                        },
                        options: {
                            responsive: true,
                            plugins: {
                                legend: {
                                    position: 'right'
                                },
                                title: {
                                    display: true,
                                    text: 'Minulý měsíc'
                                }
                            }
                        }
                    });
                });
        }

        // 4. Graf za tento měsíc
        const ctxThisMonth = document.getElementById('chartThisMonth');
        if (ctxThisMonth) {
            fetch('/Home/GetChartThisMonth')
                .then(response => response.json())
                .then(data => {
                    new Chart(ctxThisMonth, {
                        type: 'pie',
                        data: {
                            labels: data.map(d => d.categoryName),
                            datasets: [{
                                data: data.map(d => d.total),
                                backgroundColor: [
                                    '#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0',
                                    '#9966FF', '#FF9F40', '#8AC926', '#1982C4'
                                ]
                            }]
                        },
                        options: {
                            responsive: true,
                            plugins: {
                                legend: {
                                    position: 'right'
                                },
                                title: {
                                    display: true,
                                    text: 'Tento měsíc'
                                }
                            }
                        }
                    });
                });
        }
    });
</script>