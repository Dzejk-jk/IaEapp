@using IaEapp.DTO
@model TransactionCategoryDTO

@{
    ViewData["Title"] = "Upravit kategorii";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        @if (!ViewData.ModelState.IsValid) {
            <div class="alert alert-danger">
                <div asp-validation-summary="All"></div>
            </div>
        }
        <div class="card shadow-sm">
            <div class="card-header fw-semibold">Úprava kategorie</div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()
                    <div class="mb-4">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="invalid-feedback d-block"></span>
                        <span class="text-danger small"></span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">Zpět</a>
                        <button type="submit" class="btn btn-success">Uložit změny</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
