@model AppUser

@{
    ViewData["Title"] = "Změna hesla";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm">
            <div class="card-header fw-semibold">Změna hesla</div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="All" class="alert alert-danger d-none"></div>
                    <div class="mb-3">
                        <label class="form-label">ID</label>
                        <input class="form-control" value="@Model.Id" disabled />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Uživatelské jméno</label>
                        <input class="form-control" value="@Model.UserName" disabled />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input class="form-control" value="@Model.Email" readonly />
                    </div>
                    <div class="mb-4">
                        <label class="form-label">Nové heslo</label>
                        <input name="password" type="password" class="form-control" placeholder="Zadejte nové heslo" />
                    </div>
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">Zpět</a>
                        <button type="submit" class="btn btn-primary">Uložit změny</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
