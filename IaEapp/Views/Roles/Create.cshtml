@model string
@{
    ViewData["Title"] = "Vytvořit roli";
}


<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        @if (!ViewData.ModelState.IsValid) {
            <div class="alert alert-danger">
                <div asp-validation-summary="All"></div>
            </div>
        }
        <div class="card shadow-sm">
            <div class="card-header fw-semibold">Vytvoření role</div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="All" class="alert alert-danger d-none"></div>
                    <div class="mb-4">
                        <label class="form-label">Název role</label>
                        <input name="name" class="form-control" placeholder="Např. Admin, User" />
                    </div>
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">Zpět</a>
                        <button type="submit" class="btn btn-success"> Vytvořit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}