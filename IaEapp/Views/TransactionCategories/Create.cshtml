@using IaEapp.DTO
@model TransactionCategoryDTO

@{
    ViewData["Title"] = "Vytvořit kategorii";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">

        <div class="card shadow-sm">
            <div class="card-header fw-semibold">Vytvoření kategorie</div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="All" class="alert alert-danger d-none"></div>
                    <div class="mb-4">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="Např. Jídlo, Nájem, Plat…" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">Zpět</a>
                        <button type="submit" class="btn btn-success">Vytvořit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
