@using IaEapp.DTO
@model TransactionDTO

@{
    ViewData["Title"] = "Upravit transakci";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm">
            <div class="card-header fw-semibold">Úprava transakce
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="All" class="alert alert-danger d-none"></div>
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="invalid-feedback d-block"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Amount" class="form-label"></label>
                        <input asp-for="Amount" type="number" step="0.01" class="form-control" />
                        <span asp-validation-for="Amount" class="invalid-feedback d-block"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Date" class="form-label"></label>
                        <input asp-for="Date" type="date" class="form-control" />
                        <span asp-validation-for="Date" class="invalid-feedback d-block"></span>
                    </div>
                    <div class="mb-4">
                        <label asp-for="TransactionCategoryId" class="form-label"></label>
                        <select asp-for="TransactionCategoryId" class="form-select" asp-items="@(ViewData["Categories"] as SelectList)">
                            <option value="">-- vyber kategorii --</option>
                        </select>
                        <span asp-validation-for="TransactionCategoryId" class="invalid-feedback d-block"></span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">Zpět</a>
                        <button type="submit"class="btn btn-success">Uložit změny</button>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
