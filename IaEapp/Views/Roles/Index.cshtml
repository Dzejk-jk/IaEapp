@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Role";
}

<div class="row mb-4">
    <div class="col">
        <h1 class="h3 fw-bold">Role</h1>
        <p class="text-muted mb-0">Správa uživatelských rolí</p>
    </div>

    <div class="col text-end">
        <a asp-action="Create" class="btn btn-success">+ Nová role</a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover mb-0 align-middle">
            <thead class="table-light">
                <tr>
                    <th>Název</th>
                    <th class="text-muted">ID</th>
                    <th class="text-end">Akce</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model) {
                    @if (role.Id == "94f6c59f-9902-48df-958d-f90c24799add" && !User.IsInRole("SuperAdmin")) {
                    <tr>
                        <td class="fw-semibold">@role.Name</td>
                        <td class="text-muted small">xxxxxxxxxxx</td>

                        <td class="text-end">
                            <button class="btn btn-sm btn-outline-warning me-1" disabled>Upravit</button>
                            <form class="d-inline">
                                <button type="submit" class="btn btn-sm btn-outline-danger" disabled>Odstranit</button>
                            </form>
                        </td>
                    </tr>
                    }
                    else
                    {
                        <tr>
                            <td class="fw-semibold">@role.Name</td>
                            <td class="text-muted small">@role.Id</td>

                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-warning me-1" asp-action="Edit" asp-route-id="@role.Id">Upravit</a>
                                <form asp-action="Delete" asp-route-id="@role.Id" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Odstranit</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>