@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
	ViewData["Title"] = "Role";
}
<h1 class="bg-info text-white">Role</h1>
<a asp-action="Create" class="btn btn-secondary">Vytvořit roli</a>
<table class="table table-sm table-bordered">
	<tr>
		<th>Název</th>
		<th>Upravit</th>
		<th>Smazat</th>
		<th>ID</th>
	</tr>
	@foreach (var role in Model) {
		<tr>
			<td>@role.Name</td>
			<td><a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@role.Id">Upravit</a></td>
			<td>
				<form asp-action="Delete" asp-route-id="@role.Id"
					  method="post">
					<button type="submit" class="btn btn-sm btn-danger">
						Smazat
					</button>
				</form>
			</td>
			<td>@role.Id</td>
		</tr>
	}
</table> 