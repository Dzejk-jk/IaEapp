@model RoleEdit

@{
    ViewData["Title"] = "Editace role";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header fw-semibold">Editace role: @Model.Role.Name</div>
            <div class="card-body">
                <form method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="roleName" value="@Model.Role.Name" />
                    <input type="hidden" name="roleId" value="@Model.Role.Id" />
                    <div asp-validation-summary="All" class="alert alert-danger d-none"></div>

                    <!-- ADD USERS -->
                    <div class="mb-4">
                        <h5 class="mb-2">Přidat uživatele</h5>
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Uživatel</th>
                                        <th class="text-center">Přidat</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (!Model.NonMembers.Any()) {
                                        <tr>
                                            <td colspan="2" class="text-muted">Všichni uživatelé mají tuto roli</td>
                                        </tr>
                                    } else {
                                        @foreach (AppUser user in Model.NonMembers) {
                                            <tr>
                                                <td>@user.UserName</td>
                                                <td class="text-center">
                                                    <input type="checkbox" name="AddIds" value="@user.Id" />
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- REMOVE USERS -->
                    <div class="mb-4">
                        <h5 class="mb-2">Odebrat uživatele</h5>
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Uživatel</th>
                                        <th class="text-center">Odebrat</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (!Model.Members.Any()) {
                                        <tr>
                                            <td colspan="2" class="text-muted">Žádný uživatel nemá tuto roli</td>
                                        </tr>
                                    } else {
                                        @foreach (AppUser user in Model.Members) {
                                            <tr>
                                                <td>@user.UserName</td>
                                                <td class="text-center">
                                                    <input type="checkbox" name="DeleteIds" value="@user.Id" />
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">Zpět</a>
                        <button type="submit" class="btn btn-primary">Uložit změny</button>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>
