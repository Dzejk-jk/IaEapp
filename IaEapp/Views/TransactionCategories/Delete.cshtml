@using IaEapp.DTO
@model TransactionCategoryDTO

@{
    ViewData["Title"] = "Smazat kategorii";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm border-danger">
            <div class="card-header bg-danger text-white fw-semibold">Potvrzení smazání</div>
            <div class="card-body">
                <p class="text-danger fw-semibold">Opravdu chcete smazat tuto kategorii? Smažou se i všechny transakce pod touto kategorií!!</p>
                @if (User.Identity.IsAuthenticated && User.IsInRole("SuperAdmin")) {
                <form asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <div class="mb-4">
                        <label class="form-label">Název kategorie</label>
                        <input class="form-control" value="@Model.Name" readonly />
                    </div>
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">Zpět</a>
                        <button type="submit" class="btn btn-danger">Smazat</button>
                    </div>
                    </form>
                }
                else
                {
                    <div class="mb-4">
                        <label class="form-label">Název kategorie</label>
                        <input class="form-control" value="@Model.Name" readonly />
                    </div>
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">Zpět</a>
                        <button type="submit" class="btn btn-danger" disabled>Smazat</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>