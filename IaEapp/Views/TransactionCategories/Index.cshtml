@using IaEapp.DTO
@model IEnumerable<TransactionCategoryDTO>

@{
    ViewData["Title"] = "Kategorie transakcí";
}

<div class="row mb-4">
    <div class="col">
        <h1 class="h3 fw-bold">Kategorie transakcí</h1>
        <p class="text-muted mb-0">Správa kategorií příjmů a výdajů</p>
    </div>
    <div class="col text-end">
        <a class="btn btn-success"
           asp-action="Create">+ Nová kategorie</a>
    </div>
</div>

<div class="row g-3">
    @foreach (var item in Model) {
        <div class="col-md-4 col-lg-3">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title mb-1">@item.Name</h5>
                    <p class="text-muted small mb-3">ID: @item.Id</p>
                    <div class="d-flex justify-content-between">
                        <a class="btn btn-sm btn-outline-warning" asp-action="Edit" asp-route-id="@item.Id">Upravit</a>
                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Smazat</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
